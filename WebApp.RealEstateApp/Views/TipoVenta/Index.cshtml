@using RealEstateApp.Core.Application.ViewModels.VentaCategory;
@model List<VentaVm>
@{
    ViewData["Title"] = "Tipo Venta";
}

<div class="container-fluid">

    <div class="row mb-3">
        <div class="col-3 offset-9">
            <a asp-controller="TipoVenta" asp-action="Create" class="btn btn-success">Crear nuevo tipo de propiedad</a>
        </div>
    </div>

    <div class="row">

        @if (Model == null || Model.Count == 0)
        {
            <h2>No hay Tipo de Ventas Creadas</h2>
        }
        else
        {
            @foreach (VentaVm item in Model)
            {
                <div class="col-4">
                    <div class="card bg-dark bg-gradient text-white shadow-sm">                       

                        <div class="card-body">
                            <h4 class="card-title">@item.Name</h4>
                            <p class="card-text">@item.Description</p>
                            <div class="d-flex justify-content-between align-items-center">
                                <div class="btn-group">
                                    <a asp-controller="TipoVenta" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Editar</a>
                                    <a asp-controller="TipoVenta" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Borrar</a>
                                </div>
                                <small class="fw-bold fs-6">Productos: @item.ProductsQuantity</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

</div>