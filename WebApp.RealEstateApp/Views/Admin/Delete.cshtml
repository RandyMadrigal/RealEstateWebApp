@using RealEstateApp.Infrastructure.Identity.Entities

@model ApplicationUser
@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="row">

    <div class="col-6 offset-3">
        <div class="card bg-dark bg-gradient text-white text-center animate__animated animate__fadeIn">
            <div class="card-header text-light">
                <h4>
                    ¿Está seguro que desea eliminar este agente ( @Model.FirstName ) y todas sus
                    propiedades ?
                </h4>
            </div>
            <div class="card-body">

                <form method="post" asp-controller="Admin" asp-action="DeletePost">

                    <input type="hidden" asp-for="Id" />

                    <button type="submit" class="btn btn-danger">Eliminar</button>
                    <a asp-controller="Admin" asp-action="Agentes" class="btn btn-warning">Cancelar</a>

                </form>

            </div>
        </div>
    </div>

</div>
